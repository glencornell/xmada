set -e

ADA="@ADA@"
SED="@SED@"

while [ $# -gt 1 ]; do
  cline="$cline$1 "
  shift
done

tmp="tmp$$"
newname=$tmp/`echo $1 | ${SED} -e 's,^\.libs/\(.*\).o$,\1.o,'`

trap "rm -rf $tmp" 0 1 2 3 15
mkdir $tmp

$ADA $cline$newname

mv $newname $1
chmod 0444 $tmp/*.ali
mv -f $tmp/* .
